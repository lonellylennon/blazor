@page "/userdetails/{userId:int}"
@using BlazorWebApp.Models
@inject NavigationManager Navigation
@code {
    [Parameter]
    public int userId { get; set; }

    private User currentUser;

    protected override void OnInitialized()
    {
        currentUser = users.FirstOrDefault(u => u.Id == userId);
        if (currentUser == null)
        {
            // Redirect to the users page if the user is not found
            Navigation.NavigateTo("/users");
        }
    }

    private List<User> users = new List<User>
    {
        // This should be replaced with actual data fetching logic
        new User { Id = 1, Name = "John Doe", PhoneNumber = "123-456-7890", Experience = 5, Skills = "C#, SQL" },
        new User { Id = 2, Name = "Jane Smith", PhoneNumber = "098-765-4321", Experience = 3, Skills = "JavaScript, HTML, CSS" }
    };
}

<h3>User Details</h3>

@if (currentUser != null)
{
    <div>
        <p><strong>Name:</strong> @currentUser.Name</p>
        <p><strong>Phone Number:</strong> @currentUser.PhoneNumber</p>
        <p><strong>Experience:</strong> @currentUser.Experience years</p>
        <p><strong>Skills:</strong> @currentUser.Skills</p>
    </div>
}
else
{
    <p>User not found.</p>
}
